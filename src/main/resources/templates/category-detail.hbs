{{#partial "content"}}
    <h1>{{category.name}}</h1>
    <p>Here are all the viral test available                                                                                 s listed in this category:</p>
    <ul>
        {{#each infections}}
            <li>
                <p><a href="/categories/{{category.id}}/infections/{{id}}">{{description}}</a></p>
            </li>
        {{/each}}
    </ul>
    <a href="/categories/{{category.id}}/edit">Edit this category</a><br>
    <a href="/categories/{{category.id}}/delete">DELETE this category</a>
{{/partial}}

