{{#partial "content"}}

    <p>Description:{{ viral.description }} </p>
    <p>Category of this test: {{ category.name }}</p>
    <h5>Created At:</h5>
    <p> {{ viral.createdAt }}</p>
    <h5>Viral status:
        {{#if viral.published }}
            <span class="glyphicon glyphicon-star" aria-hidden="true"></span>  Completed
        {{else}}
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Open
        {{/if}}
    </h5>

    <p>
        <a href="/infections/{{viral.id}}/edit">Edit this viral test</a><br>
        <a href="/categories/{{viral.categoryId}}/infections/{{viral.id}}/delete">DELETE this viral test</a>
    </p>

{{/partial}}

{{> layout.hbs}}