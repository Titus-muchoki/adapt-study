{{#partial "content"}}

    {{#if editViral}}
        <h1>Edit this viral test!</h1>
        <form action="/infections/{{viral.id}}" method="post">
            <br>
            <label for="description">Edit this viral test's description</label>
            <input id="description" name="description" type="text" value="{{viral.description}}">
            <br>
            <label for="categoryId">Update this viral test's category:</label>
            <select id="categoryId" name="categoryId">
                {{#each categories}}
                    <option value="{{id}}">{{name}}</option>
                {{/each}}
            </select>
            <p>Don't see the right category?<a href="/categories/new">Add a new one first.</a></p>
            <button type="submit" class="btn btn-default">Go!</button>
        </form>
    {{else}}
        <h1>Add a new viral test!</h1>

        <form action="/infections" method="post">
            {{#if categories}}
                <label for="description">Viral Description</label>
                <input id="description" name="description" type="text">
                <label for="categoryId">Categorize this viral as:</label>
                <select id="categoryId" name="categoryId">
                    {{#each categories}}
                        <option value="{{id}}">{{name}}</option>
                    {{/each}}
                </select>
                <p>Don't see the right category?<a href="/categories/new">Add a new one first.</a></p>
            {{else}}
                <h3> You'll need to add a category before you add a viral. <a href="/categories/new">Add one here.</a> </h3>

            {{/if}}
            <button type="submit" class="btn btn-default">Go!</button>
        </form>
    {{/if}}

{{/partial}}

{{> layout.hbs}}