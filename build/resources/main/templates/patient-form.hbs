{{#partial "content"}}

    {{#if editPatient}}
        <h1>Edit this patient record!</h1>
        <form action="/patients/{{patient.id}}" method="post">
            <br>
            <label for="name">Edit this patient name</label>
            <input id="name" name="name" type="text" value="{{patient.name}}">
            <br>
            <label for="nationalId">Edit this patient nationalId</label>
            <input id="nationalId" name="nationalId" type="text" value="{{patient.nationalId}}">
            <br>
            <label for="dateTreated">Edit this patient dateTreated</label>
            <input id="dateTreated" name="dateTreated" type="date" value="{{patient.dateTreated}}">
            <br>
            <label for="infection">Edit this patient infection</label>
            <input id="infection" name="infection" type="text" value="{{patient.infection}}">
            <br>
            <label for="tel">Edit this patient tel</label>
            <input id="tel" name="tel" type="text" value="{{patient.tel}}">
            <br>
            <label for="amount">Edit this patient amount</label>
            <input id="amount" name="amount" type="text" value="{{patient.amount}}">
            <br>
            <label for="officerId">Update this patient officer:</label>
            <select id="officerId" name="officerId">
                {{#each officers}}
                    <option value="{{id}}">{{name}}</option>
                {{/each}}
            </select>
            <p>Don't see the right officer?<a href="/officers/new">Add a new officer first.</a></p>
            <button type="submit" class="btn btn-default">Go!</button>
        </form>
    {{else}}
        <h1>Add a new patients!</h1>

        <form action="/patients" method="post">
            {{#if officers}}
                <label for="name">Patient name</label>
                <input id="name" name="name" type="text">
                <br>
                <label for="nationalId">Patient nationalId</label>
                <input id="nationalId" name="nationalId" type="text">
                <br>
                <label for="dateTreated">Patient dateTreated</label>
                <input id="dateTreated" name="dateTreated" type="date">
                <br>
                <label for="infection">Patient infection</label>
                <input id="infection" name="infection" type="text">
                <br>
                <label for="tel">Patient tel</label>
                <input id="tel" name="tel" type="text">
                <br>
                <label for="amount">Patient amount</label>
                <input id="amount" name="amount" type="text">
                <br>
                <label for="officerId">Officer for this patient:</label>
                <select id="officerId" name="officerId">
                    {{#each officers}}
                        <option value="{{id}}">{{name}}</option>
                    {{/each}}
                </select>
                <p>Don't see the right officer?<a href="/officers/new">Add a new officer</a></p>
            {{else}}
                <h3> You'll need to add an officer before you add a patient. <a href="/officers/new">Add one here.</a> </h3>

            {{/if}}
            <button type="submit" class="btn btn-default">Go!</button>
        </form>
    {{/if}}

{{/partial}}

{{> layout.hbs}}