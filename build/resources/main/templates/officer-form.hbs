{{#partial "content"}}
    {{#if editOfficer}}
        <h1>Edit this Officer!</h1>
        <form action="/officers/{{officer.id}}" method="post">
            <label for="name">Edit this officer's name</label>
            <input id="newOfficerName" name="newOfficerName" type="text" value="{{category.name}}">
            <br>
            <button type="submit" class="btn btn-default">Go!</button>
        </form>
    {{else}}
        <h1>Add a new Officer!</h1>
        <form action="/officers" method="post">
            <label for="name">Officer Name</label>
            <input id="name" name="name" type="text">
            <button type="submit" class="btn btn-default">Go!</button>
        </form>
    {{/if}}
{{/partial}}

{{> layout.hbs}}